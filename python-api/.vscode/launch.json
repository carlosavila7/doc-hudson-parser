{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Run Playground",
            "type": "debugpy",
            "request": "launch",
            "program": "playground.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env", 
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}